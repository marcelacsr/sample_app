<% unless current_user?(@user) %>
    <div id="follow_form">
      <% if @user.notified?(current_user) %>
          <%= render 'notified' %>
      <% elsif current_user.following?(@user) %>
          <%= render 'unfollow' %>
      <% else %>
          <%= render 'follow' %>
      <% end %>
    </div>
<% end %>
