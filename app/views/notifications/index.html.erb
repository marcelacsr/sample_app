<% provide(:title, 'Notifications') %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Notifications (<%= @notifications.count %>)</h1>
      <% @notifications.each do |notification| %>
          <div class="line">
            <div class="timestamp">
              <p> <%= link_to notification.follower.name, notification.follower %>
                seguiu você. | <%= time_ago_in_words(notification.created_at) %>
                ago</p>
            </div>
            <div class="row">
              <div class="btn-group">
                <div class="col-md-6">
                  <!--Criar o relacionamento na tabela de relacionamento-->
                  <%= form_for(current_user.passive_relationships.build, remote: true) do |f| %>
                      <%= hidden_field_tag :follower_id, notification.follower_id %>
                      <%= f.submit "Approve",
                                   style: 'color:#FFFFFF;', class: 'btn btn-success' %>
                  <% end %>
                </div>

                <div class="col-md-6">
                  <!--Excluir da tabela de notificação, a notificação-->
                  <%= form_for notification, html: {method: :delete} do |f| %>
                      <%= f.submit "Ignore",
                                   style: 'color:#FFFFFF;', class: 'btn btn-danger' %>
                  <% end %>
                </div>
              </div>
              <!--o rails pega o show daquele objeto(user) no controller&ndash;&gt;-->
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>